/* Private variables ---------------------------------------------------------*/

UART_HandleTypeDef huart2;
UART_HandleTypeDef huart3;
/* USER CODE BEGIN PV */
// --- ตัวแปรรับค่า (แยกกันชัดเจน) ---
uint8_t rx2; // รับจาก Board 1 (UART2)
uint8_t rx3; // รับจาก PC (UART3)

// --- Buffer (แยกกันชัดเจน) ---
char rx_buffer2[50]; // ข้อมูลจากเพื่อน
char rx_buffer3[50]; // ข้อมูลจากคีย์บอร์ดเรา

// --- Index ---
volatile uint8_t rx_index2 = 0;
volatile uint8_t rx_index3 = 0;

// --- Flags ---
volatile uint8_t input_complete = 0;   // เราพิมพ์เสร็จ
volatile uint8_t receive_complete = 0; // เพื่อนส่งมาเสร็จ

// ตัวแปรเก็บชื่อ
char user_name[50];  // ชื่อเพื่อน (ที่รับมา)
char my_name[50];    // ชื่อเรา (ที่พิมพ์เอง)

// ข้อความ
char start_msg[]   = "Man from U.A.R.T.2! (Waiting for Board 1...)\r\n";
char quit_msg[]    = "Quit PRESS q\r\n";
char blank[]       = "        ";
char name_msg[]    = "Name: ";
char prompt[] = " => ";

typedef enum {
	Wait_Ready, // รอเพื่อนทักมาก่อน
	Wait_Name,  // ถึงตาเราพิมพ์ชื่อ
	Wait_Msg,   // เริ่มแชท
	Ready,
} SystemState;

SystemState currentState = Wait_Ready; // เริ่มต้นด้วยการรอ
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MPU_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);
static void MX_USART3_UART_Init(void);
/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */

/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MPU Configuration--------------------------------------------------------*/
  MPU_Config();

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_USART2_UART_Init();
  MX_USART3_UART_Init();
  /* USER CODE BEGIN 2 */
    // เริ่มดักฟัง (แยกตัวแปร)
  HAL_UART_Receive_IT(&huart2, &rx2, 1);
  HAL_UART_Receive_IT(&huart3, &rx3, 1);

  // Print ข้อความต้อนรับ
  HAL_UART_Transmit(&huart3, (uint8_t*)start_msg, strlen(start_msg), HAL_MAX_DELAY);
  HAL_UART_Transmit(&huart3, (uint8_t*)quit_msg, strlen(quit_msg), HAL_MAX_DELAY);
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
	  switch (currentState)
	  {

	  	  case Wait_Ready:
	  		  if (receive_complete)
	  		  {
	  			strcpy(user_name, rx_buffer2);
	  			HAL_UART_Transmit(&huart3, (uint8_t*)blank, strlen(blank), HAL_MAX_DELAY);
	  			HAL_UART_Transmit(&huart3, (uint8_t*)user_name, strlen(user_name), HAL_MAX_DELAY);
	  			HAL_UART_Transmit(&huart3, (uint8_t*)" is ready\r\n", strlen(" is ready\r\n") , HAL_MAX_DELAY);
	  			HAL_UART_Transmit(&huart3, (uint8_t*)blank, strlen(blank), HAL_MAX_DELAY);
				HAL_UART_Transmit(&huart3, (uint8_t*)name_msg, strlen(name_msg), HAL_MAX_DELAY);
	  			memset(rx_buffer2, 0, sizeof(rx_buffer2));
	  			rx_index2 = 0;
	  			receive_complete = 0;
	  			currentState = Wait_Name;
	  		  }
	  		  break;

	  	  case Wait_Name:
	  		if (input_complete == 1)
				{
					strcpy(my_name, rx_buffer3);
					HAL_UART_Transmit(&huart2, (uint8_t*)my_name, strlen(my_name), 100);
                    HAL_UART_Transmit(&huart2, (uint8_t*)"\n", 1, 100);
                    memset(rx_buffer3, 0, sizeof(rx_buffer3));
					rx_index3 = 0;
					input_complete = 0;
					currentState = Ready;
				}
	  		  break;

	  	  case Ready:
	  		  if (receive_complete){
				  HAL_UART_Transmit(&huart3, (uint8_t*)blank, strlen(blank), HAL_MAX_DELAY);
				  HAL_UART_Transmit(&huart3, (uint8_t*)user_name, strlen(user_name), 100);
				  HAL_UART_Transmit(&huart3, (uint8_t*)" : ", strlen(" : "), 100);
				  HAL_UART_Transmit(&huart3, (uint8_t*)rx_buffer2, strlen(rx_buffer2), HAL_MAX_DELAY);
				  HAL_UART_Transmit(&huart3, (uint8_t*)"\r\n", 2, 10);
				  HAL_UART_Transmit(&huart3, (uint8_t*)blank, strlen(blank), HAL_MAX_DELAY);
				  HAL_UART_Transmit(&huart3, (uint8_t*)my_name, strlen(my_name), 100);
				  HAL_UART_Transmit(&huart3, (uint8_t*)prompt, strlen(prompt), 100);
				  memset(rx_buffer2, 0, sizeof(rx_buffer2));
				  rx_index2 = 0;
				  receive_complete = 0;
				  currentState = Wait_Msg;

	  		  }

	  		  break;

	  	  case Wait_Msg:
			  if(input_complete == 1)
			  {
				HAL_UART_Transmit(&huart2, (uint8_t*)rx_buffer3, strlen(rx_buffer3), 100);
				HAL_UART_Transmit(&huart2, (uint8_t*)"\n", 1, 100);
				memset(rx_buffer3, 0, sizeof(rx_buffer3));
				rx_index3 = 0;
				input_complete = 0;
				currentState = Ready;
			  }
			  break;

	  }
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE1);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSI;
  RCC_OscInitStruct.PLL.PLLM = 8;
  RCC_OscInitStruct.PLL.PLLN = 216;
  RCC_OscInitStruct.PLL.PLLP = RCC_PLLP_DIV2;
  RCC_OscInitStruct.PLL.PLLQ = 2;
  RCC_OscInitStruct.PLL.PLLR = 2;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Activate the Over-Drive mode
  */
  if (HAL_PWREx_EnableOverDrive() != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV4;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV2;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_7) != HAL_OK)
  {
    Error_Handler();
  }
}

